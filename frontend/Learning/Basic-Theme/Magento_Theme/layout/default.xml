<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="wish-list-link" remove="true" />
        <referenceBlock name="my-account-link" remove="true" />
        <referenceBlock name="catalog.compare.link" remove="true" />
        <referenceBlock name="advanced-search-link" remove="true" />
        <referenceBlock name="skip_to_content" remove="true" />
        <referenceBlock name="report.bugs" remove="true" />
        <referenceBlock name="newsletter" remove="true" />
        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Text" name="footer_links_title" before="-">
                <arguments>
                    <argument translate="true" name="text" xsi:type="string">
                        <![CDATA[<div class="title"><strong>Information</strong></div>]]>
                    </argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
